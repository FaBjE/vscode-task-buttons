{
  "name": "vscode-task-buttons",
  "displayName": "vscode-task-buttons",
  "description": "Add your tasks as buttons in the status bar",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.56.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "configuration":[
      {
        "title": "VsCodeTaskButtons",
        "properties": {
          "VsCodeTaskButtons.tasks": {
            "default": [],
            "description": "Define the tasks in which you would like to have buttons added for"
          }
        }

      }
    ]
  },
  "main": "./extension.js",
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.56.0",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  }
}
