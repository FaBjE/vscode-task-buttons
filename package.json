{
  "name": "vscode-task-buttons",
  "displayName": "Task Buttons",
  "description": "Add your tasks as buttons in the status bar",
  "version": "1.0.4",
  "repository": {
    "type": "git",
    "url": "https://github.com/spencerwmiles/vscode-task-buttons"
  },
  "engines": {
    "vscode": "^1.56.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "publisher": "spencerwmiles",
  "contributes": {
    "configuration": [
      {
        "title": "VsCodeTaskButtons",
        "properties": {
          "VsCodeTaskButtons.showCounter": {
            "default": true,
            "description": "Boolean to show/hide the Task counter. Default true."
          },
          "VsCodeTaskButtons.tasks": {
            "default": [],
            "description": "Define the tasks in which you would like to have buttons added for"
          }
        }
      }
    ]
  },
  "main": "./build/main.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint ./ --ext .ts,.tsx",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./build/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.17",
    "@types/vscode": "^1.56.0",
    "eslint": "^8.8.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.0",
    "typescript": "^4.5.5",
    "@vscode/test-electron": "^2.1.2"
  },
  "dependencies": {}
}